<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Ecomm" parent="Theme.MaterialComponents.DayNight.NoActionBar.Bridge">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/myTheme</item>
        <item name="colorPrimaryVariant">@color/myThemeLight</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Ecomm" parent="Base.Theme.Ecomm" />
    <style name="BottomNavigationViewTextStyleActive">
        <item name="android:fontFamily">@font/urbanist_bold</item>
    </style>
    <style name="BottomNavigationViewTextStyle">
        <item name="android:fontFamily">@font/urbanist_medium</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_top</item>
        <item name="android:windowExitAnimation">@anim/slide_out_bottom</item>
    </style>
    <style name="DialogAnimationBottom">
        <item name="android:windowEnterAnimation">@anim/dialog_slide_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_slide_out</item>
    </style>
    <style name="EcommButton">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="EcommButtonSecondary">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:backgroundTint">#35383F</item>
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    <style name="Title">
        <item name="android:fontFamily">@font/urbanist_black</item>
        <item name="android:textSize">70dp</item>
    </style>
    <style name="Heading1">
        <item name="android:fontFamily">@font/urbanist_bold</item>
        <item name="android:textSize">48dp</item>
    </style>
    <style name="textColor">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="textColorLight">
        <item name="android:textColor">#E0E0E0</item>
    </style>
    <style name="iconColor">
        <item name="android:tint">#fff</item>
    </style>
    <style name="productBgColor">
        <item name="android:backgroundTint">#35383F</item>
    </style>
    <style name="screenBg">
        <item name="android:background">#181A20</item>
    </style>
    <style name="bgTint">
        <item name="android:backgroundTint">#181A20</item>
    </style>
    <style name="searchBg">
        <item name="android:backgroundTint">#1F222A</item>
    </style>
    <style name="notFoundImage">
        <item name="android:src">@drawable/not_found_frame_dark</item>
    </style>
    <style name="appleImage">
        <item name="android:src">@drawable/apple_img</item>
    </style>
    <style name="imageShape">
        <item name="android:background">@drawable/image_shape_dark</item>
    </style>
    <style name="bgShade">
        <item name="android:background">@drawable/shade_bg</item>
    </style>
    <style name="bgQuantity">
        <item name="android:backgroundTint">#35383F</item>
    </style>
    <style name="btnQuantity">
        <item name="android:tint">#fff</item>
    </style>
    <style name="textQuantity">
        <item name="android:textColor">#fff</item>
    </style>
    <style name="stockBg">
        <item name="android:backgroundTint">#1401B763</item>
    </style>
    <style name="productTitle">
        <item name="android:textColor">#535353</item>
    </style>
</resources>